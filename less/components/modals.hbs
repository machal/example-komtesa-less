<div class="modal fade" id="tabsModal">
    <div class="modal__dialog" role="document">
        <div class="modal__content">
            <div class="modal__header">
                <div class="modal__title">Modal title</div>
                <button type="button" class="modal__close" data-dismiss="modal"><i class="fas fa-times"></i></button>
            </div>
            {{> components.tabs modifier_class="tabs--list" }}
